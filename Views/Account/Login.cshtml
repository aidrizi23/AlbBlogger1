

@model AlbBlogger1.Models.LoginViewModel
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #e6ecf0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 40px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .twitter-logo {
        text-align: center;
        margin-bottom: 20px;
    }

    .twitter-logo svg {
        width: 40px;
        height: 40px;
        fill: #1da1f2;
    }

    h1 {
        font-size: 23px;
        font-weight: bold;
        text-align: center;
        color: #14171a;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        color: #14171a;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 12px;
        border: 1px solid #e6ecf0;
        border-radius: 4px;
        font-size: 16px;
        transition: border-color 0.2s;
    }

    input[type="email"]:focus,
    input[type="password"]:focus {
        border-color: #1da1f2;
        outline: none;
    }

    button[type="submit"] {
        background-color: #1da1f2;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s;
        width: 100%;
    }

    button[type="submit"]:hover {
        background-color: #1a91da;
    }

    .text-danger {
        color: #e0245e;
        font-size: 14px;
    }

    .form-check {
        margin-bottom: 20px;
    }

    .form-check-label {
        color: #657786;
        font-size: 14px;
    }

    .additional-links {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
        color: #657786;
    }

    .additional-links a {
        color: #1da1f2;
        text-decoration: none;
    }

    .additional-links a:hover {
        text-decoration: underline;
    }
</style>

<div class="login-container">
    <div class="twitter-logo">
        <svg viewBox="0 0 24 24"><g><path d="M23.643 4.937c-.835.37-1.732.62-2.675.733.962-.576 1.7-1.49 2.048-2.578-.9.534-1.897.922-2.958 1.13-.85-.904-2.06-1.47-3.4-1.47-2.572 0-4.658 2.086-4.658 4.66 0 .364.042.718.12 1.06-3.873-.195-7.304-2.05-9.602-4.868-.4.69-.63 1.49-.63 2.342 0 1.616.823 3.043 2.072 3.878-.764-.025-1.482-.234-2.11-.583v.06c0 2.257 1.605 4.14 3.737 4.568-.392.106-.803.162-1.227.162-.3 0-.593-.028-.877-.082.593 1.85 2.313 3.198 4.352 3.234-1.595 1.25-3.604 1.995-5.786 1.995-.376 0-.747-.022-1.112-.065 2.062 1.323 4.51 2.093 7.14 2.093 8.57 0 13.255-7.098 13.255-13.254 0-.2-.005-.402-.014-.602.91-.658 1.7-1.477 2.323-2.41z"></path></g></svg>
    </div>

    <h1>Log in to Twitter</h1>

    <form asp-controller="Account" asp-action="Login" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit">Log in</button>
        </div>
    </form>

    <div class="additional-links">
        <p><a asp-action="ForgotPassword">Forgot your password?</a></p>
        <p>Don't have an account? <a asp-action="Register">Sign up for Twitter</a></p>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}