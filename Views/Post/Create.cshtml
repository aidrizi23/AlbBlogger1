@model AlbBlogger1.Models.PostViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a Tweet</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="What's happening?" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control tweet-content" placeholder="Enter your tweet" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" placeholder="Add tags (comma separated)" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" placeholder="Add an image URL" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Tweet" class="btn btn-primary btn-block tweet-button" />
            </div>
        </form>
        
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary btn-block">Back to Tweets</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        background-color: #e6ecf0;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    h1 {
        font-weight: bold;
        color: #1DA1F2;
    }

    .form-group label {
        font-weight: bold;
        color: #657786;
    }

    .form-control {
        border-radius: 35px;
        padding: 15px;
        font-size: 16px;
    }

    .tweet-content {
        border-radius: 20px;
    }

    .tweet-button {
        background-color: #1DA1F2;
        border-color: #1DA1F2;
        font-weight: bold;
        border-radius: 35px;
        font-size: 16px;
    }

    .tweet-button:hover {
        background-color: #0d95e8;
        border-color: #0d95e8;
    }

    .btn-secondary {
        border-radius: 35px;
        font-size: 16px;
    }

    .alert-danger {
        border-radius: 20px;
    }
</style>
