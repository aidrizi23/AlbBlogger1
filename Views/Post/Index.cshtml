@using AlbBlogger1.Data
@using AlbBlogger1.Repositories.Pagination
@model AlbBlogger1.Repositories.Pagination.PaginatedList<AlbBlogger1.Data.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
            PublishDate
        </th>
        <th>
            Tags
        </th>
        <th>
            Likes
        </th>
        <th>
            Views
        </th>
        <th>
            Image
        </th>
        <th>
            UserId
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr id="post-row-@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Views)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a href="javascript:void(0);" onclick="deletePost(@item.Id)">Delete</a>
            </td>
        </tr>
    }
    </tbody>

</table>

<script>
    function deletePost(postId) {
        if (confirm("Are you sure you want to delete this post?")) {
            $.ajax({
                url: '/Post/Delete/' + postId,
                type: 'DELETE',  // Use 'POST' if DELETE isn't allowed or supported
                success: function (response) {
                    if (response.success) {
                        // Update UI here
                        alert(response.message); // Optionally show a success message

                        // Remove the deleted row from the table
                        $('#post-row-' + postId).remove();
                    } else {
                        alert("Delete failed: " + response.message); // Handle failure if needed
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error deleting post:', error);
                    alert('Error deleting post.');
                }
            });
        }
    }
</script>

